@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Đổi mật khẩu</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/ViewChangePass.css'>
</head>
<body>
    <header class="header-top-bar">
        <div class="top-bar-left">
            <img class="logo-img" src="~/assets/logo.png">
            <a class="del-lunar-home" href="/Home/Index">Del Lunar</a>
        </div>
        <div class="top-bar-middle">
            <p class="step-name">Đổi mật khẩu</p>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="headerform">
                <img src="~/assets/logo.png" alt="logo">
                <p>Del Lunar</p>
            </div>
            <div class="field OldPass">
                <div class="label">Mật khẩu cũ</div>
                <input type="password" placeholder="Mật khẩu cũ">
                <div class="error" style="color:red; font-size:14px; padding-top:5px;"></div>
            </div>
            <div class="field NewPass">
                <div class="label">Mật khẩu mới<span></span></div>
                <input type="password" placeholder="Mật khẩu mới">
                <div class="error" style="color:red; font-size:14px; padding-top:5px;"></div>
            </div>
            <div class="field Confirm">
                <div class="label">Xác nhận mật khẩu mới<span></span></div>
                <input type="password" placeholder="Xác nhận mật khẩu mới">
                <div class="error" style="color:red; font-size:14px; padding-top:5px;"></div>
            </div>
            <div>
                <button class="validate">Xác nhận</button>
                <div class="resultChange" style="color: black; font-size: 16px; padding-top: 5px;"></div>
            </div>

        </div>
    </main>
    <script src="~/js/ViewChangePass.js"></script>
</body>
</html>
